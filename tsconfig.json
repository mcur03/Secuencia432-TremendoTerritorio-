{
  "compilerOptions": {
    "target": "ES2022",         
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",   
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,  
    "skipLibCheck": true
  },
    "include": ["**/*.ts"],    // Incluye todos los .ts en cualquier carpeta
    "exclude": ["node_modules","dist"]
}